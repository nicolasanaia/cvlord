// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model User {
  id String @id @default(auto()) @map("_id") @db.ObjectId
  name String
  image String?
  email String? @unique
  emailVerified DateTime?
  hashedPassword String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  favoriteIds String[] @db.ObjectId
  sessions Session[]
  accounts Account[]
  professional Professional[]
}

model Account {
  id String @id @default(auto()) @map("_id") @db.ObjectId
  userId String @db.ObjectId
  type String
  provider String
  providerAccountId String
  refresh_token String? @db.String
  access_token String? @db.String
  expires_at Int?
  token_type String?
  scope String?
  id_token String? @db.String
  session_state String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

model Session {
  id String @id @default(auto()) @map("_id") @db.ObjectId
  sessionToken String @unique
  userId String @db.ObjectId
  expires DateTime

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model VerificationToken {
  id String @id @default(auto()) @map("_id") @db.ObjectId
  identifier String
  token String @unique
  expires DateTime

  @@unique([identifier, token])
}

model Professional {
  id String @id @default(auto()) @map("_id") @db.ObjectId
  userId String @db.ObjectId @unique
  name String
  role String
  city String
  state String
  country String
  quotation String
  summary String
  experiences Experience[]
  education Education[]
  skills Skills[]
  projects Projects[]
  extracurricular Extracurricular[]
  languages Languages[]

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model Experience {
  id String @id @default(auto()) @map("_id") @db.ObjectId
  userId String @db.ObjectId
  role String
  company String
  location String?
  model String?
  startDate DateTime
  endDate DateTime?
  current Boolean
  description String?
  competencies String[]

  professional Professional @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model Education {
  id String @id @default(auto()) @map("_id") @db.ObjectId
  userId String @db.ObjectId
  institution String
  degree String?
  course String?
  startDate DateTime?
  endDate DateTime?
  description String?

  professional Professional @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model Skills {
  id String @id @default(auto()) @map("_id") @db.ObjectId
  userId String @db.ObjectId
  skill String

  professional Professional @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model Projects {
  id String @id @default(auto()) @map("_id") @db.ObjectId
  userId String @db.ObjectId
  name String
  image String?
  description String?
  owner String?

  professional Professional @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model Extracurricular {
  id String @id @default(auto()) @map("_id") @db.ObjectId
  userId String @db.ObjectId
  name String
  institution String?
  description String?
  location String?
  startDate DateTime
  endDate DateTime?
  current Boolean

  professional Professional @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model Languages {
  id String @id @default(auto()) @map("_id") @db.ObjectId
  userId String @db.ObjectId
  language String
  writeLevel String
  readLevel String
  speechLevel String

  professional Professional @relation(fields: [userId], references: [id], onDelete: Cascade)
}